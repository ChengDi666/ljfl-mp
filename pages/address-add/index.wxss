.row-wrap {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
}

.row-wrap .label {
  width: 160rpx;
  color: #333;
}

.row-wrap .label-right {
  flex: 1;
  height: 88rpx;
